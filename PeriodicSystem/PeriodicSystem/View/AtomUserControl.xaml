<UserControl x:Class="PeriodicSystem.View.AtomUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PeriodicSystem.View"
             mc:Ignorable="d"
			 Canvas.Left="{Binding CenterX}" Canvas.Top="{Binding CenterY}" Width="{Binding Size}" Height="{Binding Size}"
             d:DesignHeight="100" d:DesignWidth="100">
			 
    <Grid>
		<Ellipse Fill="{Binding SelectedColor}"/>
        <TextBlock Text="{Binding Symbol}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>
    </Grid>
</UserControl>
