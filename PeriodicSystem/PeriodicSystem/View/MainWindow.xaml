<Window x:Class="PeriodicSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeriodicSystem"
        xmlns:ViewModel="clr-namespace:PeriodicSystem.ViewModel"
        xmlns:View="clr-namespace:PeriodicSystem.View"
        mc:Ignorable="d"
        Title="pTable" Height="720" Width="1280">

    <Window.DataContext>
        <ViewModel:ViewModel />
    </Window.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Command="{Binding NewDrawingCommand}"/>
                <MenuItem Header="_Open" Command="{Binding LoadFromXMLCommand}"/>
                <MenuItem Header="Save as" Command="{Binding SaveToXMLCommand}">
                    <!--
                    <MenuItem.Icon>
                        <Image Source="" />
                    </MenuItem.Icon>
                    -->
                </MenuItem>
                <MenuItem Header="_Save" Command="{Binding SaveToXMLCommand}"/>
                <MenuItem Header="Export Image" Command="{Binding SaveDrawingCommand}"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Command="{Binding UndoCommand}"/>
                <MenuItem Header="_Redo" Command="{Binding RedoCommand}"/>
                <Separator/>
                <MenuItem Header="Copy"/>
                <MenuItem Header="Cut"/>
                <MenuItem Header="Paste"/>
            </MenuItem>
        </Menu>
        
        <StackPanel Orientation="Horizontal" >
            <View:SidePanelUserControl/>

            <Grid>
                <ItemsControl ItemsSource="{Binding Bindings}" />
                <ItemsControl ItemsSource="{Binding Atoms}" />
            </Grid>
        </StackPanel>
    </DockPanel>
</Window>
