<UserControl x:Class="PeriodicSystem.View.Table"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeriodicSystem.View"
        mc:Ignorable="d"
        d:DesignHeight="459" 
        d:DesignWidth="703" 
        Canvas.Top ="115">

    <Expander ExpandDirection="Down"  Header=" Element table                                                                  " Background="SlateGray" Margin="0,0,0,0" VerticalAlignment="Center">
        <StackPanel  Background="DimGray">
            <GroupBox Header="Element Table" BorderBrush="LightGray">
                <StackPanel x:Name="ElementTableP">
                    <Image x:Name="pTable"  Source="/PeriodicSystem;component/Images/pTable.png" Stretch="Fill"/>
                    
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Expander>
</UserControl>
